<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6A855ECA"
    tools:context=".PostActivity">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:background="@drawable/bookshadow"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/post_title_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/neodgm"
                android:layout_marginTop="3dp"
                android:hint="제목"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:background="@drawable/btnshadow"
                android:textColor="#ffffff"
                android:id="@+id/post_save_button"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/neodgm"
                android:text="등록" />
        </LinearLayout>

        <EditText
            android:id="@+id/post_contents_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:hint="내용을 입력해주세요"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>