<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YellowBelt">

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"
            android:text="총포인트"
             />

        <EditText
            android:id="@+id/editText05"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="합300"
            android:inputType="number"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="wrap_content"
            android:text="계산"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll7"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ll6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll5"
        app:layout_constraintVertical_bias="0.225">

        <CheckBox
            android:id="@+id/checkbox07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="채용트렌드특강" />

        <EditText
            android:id="@+id/editText06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup05"
            android:text="이동" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <CheckBox
            android:id="@+id/checkbox01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="진로계획서" />

        <EditText
            android:id="@+id/editText01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup01"
            android:text="이동" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3">

        <CheckBox
            android:id="@+id/checkbox04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교양1권" />

        <CheckBox
            android:id="@+id/checkbox05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교양2권" />

        <CheckBox
            android:id="@+id/checkbox06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자율1권" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ll4"
        app:layout_constraintTop_toBottomOf="@+id/ll3">

        <EditText
            android:id="@+id/editText04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="책검색" />

        <Button
            android:id="@+id/button04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="책리스트" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2">

        <CheckBox
            android:id="@+id/checkbox03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="외국어 lv2이상" />

        <EditText
            android:id="@+id/editText03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup03"
            android:text="이동" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1">

        <CheckBox
            android:id="@+id/checkbox02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="직무검사1회" />

        <EditText
            android:id="@+id/editText02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup02"
            android:text="이동" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:layout_marginTop="76dp"
        android:text="T포인트를 획득하지 못한 항목은 '0'을 입력하세요.이동버튼 터치시 관련 링크로 이동합니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>