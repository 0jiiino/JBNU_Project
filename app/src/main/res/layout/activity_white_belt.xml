<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhiteBelt">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <CheckBox
            android:id="@+id/checkbox01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="대학생활계획서" />

        <EditText
            android:id="@+id/editText01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup"
            android:text="이동" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1">

        <CheckBox
            android:id="@+id/checkbox02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:text="인성/적성검사(택1)" />

        <EditText
            android:id="@+id/editText02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/button02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup1"
            android:text="인성" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="popup3"
            android:text="적성" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2">

        <CheckBox
            android:id="@+id/checkbox03"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:text="외국어 lv1이상"
             />

        <EditText
            android:id="@+id/editText03"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2"
             />

        <Button
            android:id="@+id/button03"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:onClick="popup2"
            android:text="이동"
             />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll5">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="총포인트" />

        <EditText
            android:id="@+id/editText05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:ems="10"
            android:hint="합200"
            android:inputType="number" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="계산" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ll4"
        app:layout_constraintTop_toBottomOf="@+id/ll3">

        <EditText
            android:id="@+id/editText04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:ems="10"
            android:hint="포인트"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="책 검색" />

        <Button
            android:id="@+id/button04"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="30"
            android:text="책리스트" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        app:layout_constraintVertical_bias="0.0">

        <CheckBox
            android:id="@+id/checkbox04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교양1권" />

        <CheckBox
            android:id="@+id/checkbox05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교양2권" />

        <CheckBox
            android:id="@+id/checkbox06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자율1권" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="287dp"
        android:layout_height="57dp"
        android:layout_marginTop="96dp"
        android:text="포인트를 획득하지 못한 항목은 '0'을 입력하세요.이동버튼 터치시 관련 링크로 이동합니다."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


