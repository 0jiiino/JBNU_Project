<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".BeltActivity">

    <LinearLayout
        android:id="@+id/mainlinear"
        android:layout_width="270dp"
        android:layout_height="363dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9">

        <Button
            android:id="@+id/btn_white"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:text="WHITE BELT(1학년)"
            android:textColor="#A8080110"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_yellow"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:text="YELLOW BELT(2학년)"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/btn_white" />

        <Button
            android:id="@+id/btn_blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:text="BLUE BELT(3학년)"
            android:textColor="#1C38D5"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/btn_yellow" />

        <Button
            android:id="@+id/btn_red"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:text="RED BELT(4학년)"
            android:textColor="#F63636"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/btn_blue" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="204dp"
        android:layout_height="53dp"
        android:layout_marginTop="70dp"
        android:font="@font/neodgm"
        android:fontFamily="@font/neodgm"
        android:text="벨트리스트"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#D97E3FEF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>